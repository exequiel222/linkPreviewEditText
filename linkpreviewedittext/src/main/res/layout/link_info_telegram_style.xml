<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/link_info_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_radius"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/rich_link_original_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/md_light_blue_400"
        android:textColorLink="@color/md_light_blue_400"
        tools:text="Original Link" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_telegram"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/link_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="2dp"
                android:textColor="@color/md_light_blue_500"
                android:textStyle="bold"
                tools:text="Data" />

            <TextView
                android:id="@+id/link_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2dp"
                android:textColor="@color/grey_900"
                android:textStyle="bold"
                tools:text="Data" />

            <TextView
                android:id="@+id/link_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2dp"
                android:textColor="@color/blue_grey_300"
                tools:text="Data" />

        </LinearLayout>

        <ImageView
            android:id="@+id/link_image"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:contentDescription="@string/link_image"
            android:scaleType="centerInside"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>

</LinearLayout>